<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChatTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorControlActivated">@color/colorChatRoomAccent</item>
        <item name="android:textColor">@color/white</item>
        <!--应用的背景色，popMenu的背景默认使用该颜色-->
    </style>

    <style name="ChatRoomBaseFragmentDialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorControlActivated">@color/colorChatRoomAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SoundEffectFragmentTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CreateRadioButtonStyle">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/radiobutton_textcolor_selector</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
</resources>